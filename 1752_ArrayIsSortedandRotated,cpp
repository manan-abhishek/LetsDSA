#include <iostream>
#include <vector>
using namespace std;

class Solution {
public:
    bool check(vector<int>& nums) {
        int count = 0;
        int n = nums.size();

        for (int i = 1; i < n; i++) {
            if (nums[i] < nums[i - 1]) {
                count++;
            }
        }

        // Check rotation condition
        if (nums[n - 1] > nums[0])
            count++;

        return count <= 1;
    }
};

int main() {
    vector<int> nums = {3, 4, 5, 1, 2};
    Solution obj;

    if (obj.check(nums))
        cout << "True (Array is sorted and rotated)" << endl;
    else
        cout << "False (Array is not sorted and rotated)" << endl;

    return 0;
}
